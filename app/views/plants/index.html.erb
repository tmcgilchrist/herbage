<h1>Listing plants</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Common names</th>
    <th>Species</th>
    <th>Genus</th>
    <th>Description</th>
    <th>Care</th>
    <th>Soil</th>
    <th>Position</th>
    <th>Colour</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @plants.each do |plant| %>
  <tr>
    <td><%= plant.name %></td>
    <td><%= plant.common_names %></td>
    <td><%= plant.species %></td>
    <td><%= plant.genus %></td>
    <td><%= plant.description %></td>
    <td><%= plant.comments_care %></td>
    <td><%= plant.soil %></td>
    <td><%= plant.position %></td>
    <td><%= plant.colour %></td>
    <td><%= link_to 'Show', plant, :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Edit', edit_plant_path(plant), :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Destroy', plant, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger'%></td>
  </tr>
<% end %>
</table>

<br />

